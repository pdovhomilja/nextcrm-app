# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

# PostgreSQL connection string (required)
DATABASE_URL="postgresql://<username>:<password>@<host>:<port>/<database>?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# OAuth Providers
GOOGLE_ID="your-google-client-id"
GOOGLE_SECRET="your-google-client-secret"

GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# File Uploads (UploadThing)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Email Service (Resend)
RESEND_API_KEY="your-resend-api-key"

# AI (OpenAI)
OPENAI_API_KEY="your-openai-api-key"

# Invoice Parsing (Rossum)
ROSSUM_USERNAME="your-rossum-username"
ROSSUM_PASSWORD="your-rossum-password"

# AWS S3 / DigitalOcean Spaces (optional, for document storage)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="your-aws-region"
AWS_BUCKET_NAME="your-s3-bucket-name"

# SMTP / IMAP (optional, for email client functionality)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"

# Notion Integration (optional, for secondBrain module)
NOTION_API_KEY="your-notion-api-key"

# Internal cron job endpoints
CRON_SECRET=                    # Secret for internal cron job endpoints
